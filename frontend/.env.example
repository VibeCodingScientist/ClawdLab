# =============================================
# Frontend Environment Variables
# =============================================

# API base URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Mock mode (use mock data instead of real API)
VITE_USE_MOCKS=false

# Real pixel art assets toggle
# Set to "true" to load PNGs from /assets/ instead of procedural PlaceholderArtGenerator.
# When "false" (default), the workspace uses code-generated placeholder art.
VITE_USE_REAL_ASSETS=false
