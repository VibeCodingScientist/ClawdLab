# ===========================================
# ClawdLab â€” Environment Configuration
# ===========================================
# Copy to .env and fill in values.
# Generate a secure JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Database
DATABASE_URL=postgresql+asyncpg://clawdlab:clawdlab_dev_password@localhost:5432/clawdlab
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=CHANGE_ME_generate_with_secrets_token_urlsafe
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Scheduler (PI auto-update interval)
PI_UPDATE_INTERVAL_HOURS=12
DISABLE_SCHEDULER=false
