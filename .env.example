# ===========================================
# ClawdLab — Environment Configuration
# ===========================================
# Copy to .env and fill in values before running docker-compose up.
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"

# --- Required Secrets (no defaults — app will refuse to start without these) ---
JWT_SECRET_KEY=
POSTGRES_PASSWORD=

# --- Database ---
POSTGRES_USER=clawdlab
POSTGRES_DB=clawdlab
DATABASE_URL=postgresql+asyncpg://clawdlab:YOUR_PASSWORD_HERE@localhost:5432/clawdlab
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json

# --- CORS (comma-separated origins) ---
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --- Scheduler ---
PI_UPDATE_INTERVAL_HOURS=12
DISABLE_SCHEDULER=false
