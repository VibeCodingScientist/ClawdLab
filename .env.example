# ===========================================
# Autonomous Scientific Research Platform
# Environment Configuration
# ===========================================

# Copy this file to .env and fill in values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://asrp:asrp_dev_password@localhost:5432/asrp
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ===========================================
# KAFKA
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=asrp-services

# ===========================================
# NEO4J
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# ===========================================
# WEAVIATE
# ===========================================
WEAVIATE_URL=http://localhost:8080

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=true
API_RELOAD=true

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Token prefix for API keys
TOKEN_PREFIX=srp_

# ===========================================
# CELERY
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================================
# VERIFICATION ENGINES
# ===========================================
# Math verification
LEAN_PATH=/usr/local/bin/lean
MATHLIB_PATH=/opt/mathlib4

# ML verification
ML_VERIFICATION_TIMEOUT=3600
ML_MAX_GPU_MEMORY_GB=40

# CompBio verification
ALPHAFOLD_WEIGHTS_PATH=/opt/alphafold/weights
CHAI1_WEIGHTS_PATH=/opt/chai1/weights

# Materials verification
MACE_MODEL_PATH=/opt/mace/models
MATERIALS_PROJECT_API_KEY=your-api-key

# ===========================================
# OBSERVABILITY
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=asrp

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_CLAIMS_PER_DAY=100
RATE_LIMIT_CHALLENGES_PER_DAY=10

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Semantic Scholar API (optional)
SEMANTIC_SCHOLAR_API_KEY=

# arXiv API (no key needed)
ARXIV_RATE_LIMIT_DELAY=3

# PDB/UniProt (no key needed)
PDB_API_URL=https://data.rcsb.org
UNIPROT_API_URL=https://rest.uniprot.org
